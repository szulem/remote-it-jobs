.row
  .col-md-8
    %h1= @job.title
    %ol.breadcrumb
      %li
        %span.glyphicon.glyphicon-calendar{"aria-hidden" => "true"}
        = @job.created_at.strftime("%d/%m")
      %li= @job.company_name
      %li= "<strong>".html_safe + @job.salary_from.to_s + " - " + @job.salary_to.to_s + " " + @job.currency.to_s + " / " + @job.salary_per + "</strong>".html_safe
      / %li= mail_to @job.email
      %li= link_to "Apply for this position", @job.url, target: "_blank"

      = " / "
      %a{href: "#{edit_job_path(@job)}"}
        %button.btn.btn-warning.btn-xs{type: "button"} Edit

    %p= @job.description.html_safe if @job.description.present?
    %br
    %a{href: "#{@job.url}", target: "_blank"}
      %button.btn.btn-success{type: "button"} Apply for this position
    %br
    %br
    %br
  .col-md-1
  .col-md-3
    .thumbnail
      .caption
        - if @job.company_logo.present?
          = image_tag("#{@job.company_logo.url(:medium)}", alt: "#{@job.company_name}")
        - else
          = image_tag("https://dummyimage.com/234x200/f4f4f4/000000.png&text=#{@job.company_name}")
        %h3= @job.company_name
        %p= mail_to @job.email

    %br
    %br
    
    %h3 Similar jobs
    %ul
      - @jobs.each do |f|
        %li
          = link_to "#{f.title}", job_path(f)

= link_to "<-- Home", root_path